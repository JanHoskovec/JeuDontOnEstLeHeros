@model JeuDontOnEstLeHeros.Core.Models.Paragraphe
@using JeuDontOnEstLeHeros.Core.Models;

@{
    ViewBag.Title = "One";
}

<h2>@Html.DisplayFor(model=> model.Id)</h2>

<div>
    <h4>Connecté@(((Avatar)Session["Avatar"]).Sexe ? "e" : "") en tant que @(((Avatar)Session["Avatar"]).Surnom)</h4>
    <hr />

        <p>
            @Html.DisplayFor(model => model.Contenu)
        </p>
        <p>
            @ViewBag.Question.Contenu
        </p>
        <ul>
            @foreach (var r in ViewBag.Reponses)
            {
                <li>
                    <a href="@r.NextParagraphId">@r.Contenu</a>
                </li>
            }
        </ul>
    
</div>
